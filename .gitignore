# Ignore all files in these directories
flows/*
models/*
output/*
settings/*

# But do NOT ignore the .gitkeep files (keeps the folder structure in git)
!flows/.gitkeep
!models/.gitkeep
!output/.gitkeep
!settings/.gitkeep

# Security folder handling
# Ignore the password file entirely
secure/.htpasswd

# Allow the nginx configuration to be tracked
!secure/nginx.conf
